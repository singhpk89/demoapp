<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/login_coutry_textview"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_states"
        android:gravity="left|center_horizontal"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:text="Choose a country"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="20dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="-6.5dp"
        android:background="#808080"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="8dp"
            android:text="+"
            android:textColor="#a6a6a6"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_county_code_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="phone"
            android:maxLength="4"
            android:maxLines="1"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:width="70dp" />

        <EditText
            android:id="@+id/login_phone_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#979797"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:textColor="#808080"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="336dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/regbtn_states"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:text="Cancel"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="336dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/regbtn_states"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:text="Next  "
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>